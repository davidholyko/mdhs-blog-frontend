{{#each blogs as |blog|}}


  <div id="blog-{{blog.id}}" data-blog-id={{blog.id}} data-owner="{{blog.owner}}" class="blog bg-dark text-light m-5 p-5">


    <form id="delete-blog-{{blog._id}}" data-blog-id={{blog._id}} data-owner="{{blog.owner}}" class="blog-crud-form owned ml-auto" data-action="delete">
      <button class="btn-danger" type="submit">Delete Blog</button>
    </form>

    <h2>Title: {{blog.title}} </h2>
    <h2>Body: {{blog.body}} </h2>
    <h2>ID: {{blog._id}}</h2>
    <h2>Blog Owner: {{blog.owner}} </h2>


    <div class="owned" data-owner="{{blog.owner}}">
      <form id="update-blog-{{blog._id}}" data-blog-id={{blog._id}} data-owner="{{blog.owner}}" class="blog-crud-form" data-action="update" >
        <textarea name="blog[title]" type="text" placeholder="Enter a blog title" maxlength="40"required>{{blog.title}}</textarea>
        <textarea name="blog[body]" type="text" placeholder="Enter a blog body" maxlength="10000" required>{{blog.body}}</textarea>
        <button type="submit">Update</button>
      </form>
    </div>

    <button class="toggle-comments" data-blog-id={{blog._id}} data-toggle="collapse" data-target=".comment[data-blog-id={{blog._id}}]">Show Comments</button>

    <div id="comments-of-blog-{{blog.id}}" class="comment collapse" data-blog-id={{blog._id}}>

      <form class="comment-crud-form post-login" data-blog-id={{blog.id}} data-action="create">
        <textarea class="w-100" name="comment[text]" type="text" placeholder="Post your comment" maxlength="1000"required></textarea>
        <button type="submit">Create Comment</button>
      </form>

    {{#each blog.comments as |comment|}}

      <div id="comment-{{comment._id}}" class="comment bg-success p-5 my-2" data-blog-id={{blog._id}} data-owner="{{comment.owner}}">

        <form id="delete-comment-{{comment._id}}" data-comment-id={{comment._id}} data-owner="{{comment.owner}}" class="comment-crud-form owned ml-auto" data-action="delete">
          <button class="bg-danger text-light" type="submit">Delete Comment</button>
        </form>



        <h4>{{comment.owner}} says</h4>
        <h4 id="comment-text-{{comment._id}}">{{comment.text}}</h4>

        <div class="owned" data-owner="{{comment.owner}}">
          <form id="update-comment-{{comment._id}}" data-comment-id={{comment._id}} class="comment-crud-form" data-action="update" data-blog-id={{blog._id}}>
            <textarea id="comment-textarea-{{comment._id}}" class="w-100" name="comment[text]" type="text" maxlength="1000" required>{{comment.text}}</textarea>
            <button type="submit">Update</button>
          </form>

        </div>
      </div>

    {{/each}}



  </div>


  </div>



{{/each}}
